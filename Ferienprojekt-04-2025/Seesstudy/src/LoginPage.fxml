<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="500"
            style="-fx-background-color: #e4ddb1;">

    <!-- Register Panel -->
    <VBox layoutX="600" layoutY="80" spacing="20"
          alignment="CENTER"
          style="-fx-background-color: #d1e3bb; -fx-padding: 40; -fx-background-radius: 20;">

        <Label text="REGISTER" style="-fx-font-size: 24px; -fx-text-fill: white;"/>

        <VBox spacing="10">
            <Label text="USERNAME" style="-fx-text-fill: white;"/>
            <TextField promptText="Enter Username"
                       style="-fx-background-color: #8b9a6e; -fx-background-radius: 40; -fx-text-fill: white;"/>

            <Label text="PASSWORD" style="-fx-text-fill: white;"/>
            <PasswordField promptText="Enter Password"
                           style="-fx-background-color: #8b9a6e; -fx-background-radius: 40; -fx-text-fill: white;"/>
        </VBox>
    </VBox>

    <!-- Login Button -->
    <Button layoutX="160" layoutY="200" text="LOGIN"
            style="-fx-background-color: #8b9a6e; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 40; -fx-padding: 10 40;"/>
</AnchorPane>
